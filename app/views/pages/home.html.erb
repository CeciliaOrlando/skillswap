<%# banner %>

<div class="banner-home" id="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('banner_01.jpg') %>);">
  <div class="container">
    <h1>EMPODERATE</strong>!</h1>
    <p>transforma tu mundo con <strong>Skill Swap!</strong></p>
    <%= link_to "EMPIEZA AHORA", "#", class: "btn btn-flat" %>
  </div>
</div>

<%# cards container %>

<div class="container-xl">
  <div class="row justify-content-center text-left">
    <div class="col-12 col-md-10">
      <h2 class="">Cursos destacados</h2>
      <h5>Aprendizaje sin límites!</h5>
    </div>
  </div>
</div>

<div class="cards-container">
  <div class="row">
    <%= render partial: "courses/course", collection: @courses %>
  </div>
</div>

<%# fake container "register now" %>

<div class="register-container" id="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('banner_01.jpg') %>);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">
        <h1>Regístrate ahora!</h2>
        <p>¡No te pierdas la oportunidad de aprender algo nuevo!</p>
        <%= link_to "REGISTRATE", "#", class: "btn btn-flat" %>
      </div>
    </div>
  </div>
</div>

<%# footer %>

<div class="footer-container">
  <div class="row">
    <%= render partial: "shared/footer" %>
  </div>
</div>
