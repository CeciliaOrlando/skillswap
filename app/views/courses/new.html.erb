<h1>Courses#new</h1>
<p>Find me in app/views/courses/new.html.erb</p>

<p><%= simple_form_for @course, url: courses_path do |f| %>
  <%= f.input :name, label: "Nombre del curso" %>
  <%= f.input :description, label: "Descripción del curso" %>
  <%= f.input :price, label: "Precio" %>
  <%= f.submit "Crear nuevo curso" %>
<% end %></p>

<p><%= link_to "Atrás", courses_path %></p>
