<%= turbo_frame_tag "login" do%>

  <div class="modal_background">
    <div class = "login_container">
     <!-- LOG-IN FORM SECTION -->
      <div class="flex-shrink-0" style="width:30px; height:30px; margin-left:340px;">
          <%= link_to root_path do %>
          <img src="<%= asset_path('close.svg') %>" alt="Idea">
          <% end %>
        </div>
      <h2 class="text-center">Ingresa</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
                 <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions btn-flat">
        <%= f.button :submit, "INGRESA" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
 <!-- FIN LOG-IN SECTION -->
  <% end %>
</div>
</div>
