<div class="event-container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Crear Evento', new_event_path(current_user), class: 'btn btn-flat' %>

            <div class="d-flex justify-content-center mb-4">
              <ul class="nav nav-tabs text-dark" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                  <button class="nav-link me-4 active" id="home-tab" data-bs-toggle="tab" data-bs-target="#Sucediendo" type="button" role="tab" aria-controls="home" aria-selected="true"><strong>Sucediendo</strong></button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link me-4" id="profile-tab" data-bs-toggle="tab" data-bs-target="#Próximos" type="button" role="tab" aria-controls="profile" aria-selected="false"><strong>Próximo</strong></button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link me-4" id="contact-tab" data-bs-toggle="tab" data-bs-target="#Caducados" type="button" role="tab" aria-controls="contact" aria-selected="false"><strong>Caducado</strong></button>
                </li>
              </ul>
            </div>


            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="Sucediendo" role="tabpanel" aria-labelledby="home-tab">
                  <%if @event_sucediendo %>
                    <%= @event_sucediendo.each do |event| %>
                      <%= render "event" %>
                  <%end %>
                <%end  %>
              </div>

              <div class="tab-pane fade" id="Próximos" role="tabpanel" aria-labelledby="profile-tab">  <%= render @events %>

              </div>
              <div class="tab-pane fade" id="Caducados" role="tabpanel" aria-labelledby="contact-tab">
               </div>



      <%= link_to 'Crear Evento', new_event_path(current_user), class: 'btn btn-flat' %>
    </div>
  </div>
</div>
