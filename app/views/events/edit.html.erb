<div class="event-container mt-5 p-5 shadow border">
  <h1>EVENTO</h1>
  <div class= row>
    <div class= "col-6 ">
      <img src="https://images.pexels.com/photos/3178818/pexels-photo-3178818.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="">
    </div>
        <div class="col-6 ">
          <%= turbo_frame_tag "event_#{@event.id}" do %>
            <%= simple_form_for @event do |form| %>
              <%= form.input :name, label: 'Título del Evento' %>
              <%= form.input :event_date, label: 'Fecha', as: :date %>
              <%= form.input :description, label: 'Descripción', as: :text %>
              <%= form.input :price, label: 'Precio' %>
              <div class="row">
                <div class="col-9">
              <%= form.button :submit, 'Actualizar Evento', style: 'background-color: #A16DB7;' %>
                </div>
                <div class="col-3">
              <%= link_to 'Atrás', event_path(@event), data: { turbo: false }, class: 'btn btn-flat' %>
              </div>
              </div>
            <% end %>
          <% end %>
        </div>
  </div>
</div>
