<div class="container-fluid" style="background-color: #f2f2f2; padding: 20px;">
  <div class="row">
    <div class="col-md-4 my-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(); ">
      <!-- Primera sección: Fecha -->
      <%= content_tag :div, event.event_date.strftime('%B %d, %Y'), class: 'section-content text-center text-black display-6 fw-bold' %>
    </div>

    <div class="col-md-4 my-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url();">
      <!-- Segunda sección: Eventos -->
      <%= content_tag :div, class: 'section-content text-center text-black' do %>
        <h2><%= event.name %></h2>
        <p><%= event.description %></p>
        <p><%= event.price %></p>
      <% end %>
    </div>

    <div class="col-md-4 my-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/4144294/pexels-photo-4144294.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);">
      <!-- Tercera sección: Foto -->
      </div>
  </div>
</div>
