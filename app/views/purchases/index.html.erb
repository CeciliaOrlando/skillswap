<div class="d-flex justify-content-center align-items-center">
  <div class="card card-width container mt-5 mb-5">
<h1>Mis Compras</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Mis Cursos</th>
          <th>Mis Profesoras</th>
          <th>Precio</th>
        </tr>
      </thead>
      <tbody>
        <% @purchases.each do |purchase| %>
          <tr>
            <td><%= purchase.course.name %></td>
            <td><%= purchase.course.user.first_name %> <%= purchase.course.user.last_name %></td>
            <td><%= purchase.course.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-8"></div>
      <div class="col-4">
        <%= link_to "volver a cursos", courses_path, class: "btn btn-flat btn-sm text-decoration-none mb-3" %>
    </div>
</div>
</div>
</div>
